{
  "editor.formatOnSave": true, // prettier issues will be fixed automatically when saves file
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true // eslint issues will be fixed automatically when saves file
  },
  "eslint.workingDirectories": ["src"],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
